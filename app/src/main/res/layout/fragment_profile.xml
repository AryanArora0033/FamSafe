<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#adb5bd"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:src="@drawable/ic_profilephoto"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Welcome! to FamSafe"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_26sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_img"
        app:layout_goneMarginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_profile"
        android:textColor="@color/black"
        android:text="Heyy"
        android:textSize="@dimen/dimen_26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343a40"
        android:text="-------------------------------------------------------------------------------"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/card_pink"
        android:layout_margin="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="made by Aryan Arora"/>
    <EditText
        android:id="@+id/et_emergency_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"
        android:background="#212529"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        app:circularflow_radiusInDP="18dp"
        android:text="       enter the emergency gmaail         "
        android:textColor="@color/white"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/btn_emegency_id"
        android:layout_height="wrap_content"
        android:backgroundTint="#212529"
        android:elevation="@dimen/dimen_8dp"
        android:text="ADD"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_emergency_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_emegency_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Emergergency Emails Added:"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:textColor="#212529"
        android:textStyle="italic"
        android:textSize="@dimen/dimen_16sp"/>

    <TextView
        android:id="@+id/email_to_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:text="heey"
        android:textSize="@dimen/_24dp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="16dp"
        />








    

</androidx.constraintlayout.widget.ConstraintLayout>