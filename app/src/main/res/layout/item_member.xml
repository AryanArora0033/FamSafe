<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_16dp"
        android:backgroundTint="@color/white "
        app:cardCornerRadius="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"/>
    <ImageView
        android:id="@+id/img_person"
        android:layout_width="@dimen/dimen_96dp"
        android:layout_height="@dimen/dimen_96dp"
        android:src="@drawable/ic_photo"
        app:layout_constraintTop_toTopOf="@id/card"
        android:layout_margin="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_person"
        android:text="Aryan Arora"
        android:textSize="@dimen/dimen_16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintStart_toEndOf="@id/img_person"
        android:elevation="@dimen/dimen_16dp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dimen_16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>